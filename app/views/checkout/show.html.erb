<table class="table">
  <tr>
    <th>Product</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <%= render @line_items %>
</table>

<table class="table">
  <tr>
    <th>total</th>
  </tr>
  <tr>
    <td><%= number_to_currency @cart.total %></td>
  </tr>
</table>

<div>
  <%= select_tag :shipping_address, options_for_select(@cart.customer.shipping_addresses.map { |sa| [sa.address.full_address, sa.id] }) if @cart.customer.shipping_addresses.any? %>
  <%= link_to 'Add new shipping address', new_add_shipping_address_path, class: 'btn btn-primary' %>
</div>

<div>
  <%= select_tag :billing_address, options_for_select(@cart.customer.billing_addresses.map { |sa| [sa.address.full_address, sa.id] }) if @cart.customer.billing_addresses.any? %>
  <%= link_to 'Add new billing address', new_add_billing_address_path, class: 'btn btn-primary' %>
</div>

<%= link_to 'Enter payment method', new_payment_path, class: 'btn btn-primary' %>
